    /*
    * purpose: get the lastest revision build number from SVN
    */

    function get_last_revision_number($path){
        $ch = curl_init();
        curl_setopt($ch, CURLOPT_URL,$path);
        curl_setopt($ch, CURLOPT_FAILONERROR,1);
        curl_setopt($ch, CURLOPT_FOLLOWLOCATION,1);
        curl_setopt($ch, CURLOPT_RETURNTRANSFER,1);
        curl_setopt($ch, CURLOPT_TIMEOUT, 15);
        $retValue = curl_exec($ch);
        curl_close($ch);
        return $retValue;
    }

    $spirit_installer = get_last_revision_number('https://gentlem4n:oAXRmR0AQcGmXyxJoEsZ@svn.riouxsvn.com/spiritinstaller/');
    $display_spirit_installer = new SimpleXMLElement($spirit_installer);
    echo $display_spirit_installer->index['rev'];

